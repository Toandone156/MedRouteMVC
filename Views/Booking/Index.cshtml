@model MedRoute.Models.Booking;

@{
    ViewData["Title"] = "Booking";

}
<!-- contact section -->
<section id="labels">
    <div class="container">
        <div class="dl">
            <div class="brand">
                <h2>
                    <strong>SỐ CỦA BẠN</strong>
                </h2>
            </div>
            <div class="discount emerald">
                @ViewBag.LatestBooking.Order
                <div class="type">
                    Phòng siêu âm
                </div>
            </div>
            <div class="descr">
                <strong>
                    Vui lòng theo dõi số thứ tự trên màn hình
                </strong>
                <!-- sit ea detraxit menandri mediocritatem, in mel dicant mentitum.  -->
            </div>
            <div class="ends">
                <small>
                    * Conditions and restrictions apply.
                </small>
            </div>
            <div class="coupon midnight-blue">
                <a data-toggle="collapse" href="#code-2" class="open-code">Nhập thông tin</a>
                <div id="code-2" class="collapse in code">
                    <!-- MNO123ST -->
                    <section id="bocso" class="doctor_section layout_padding contact_section layout_padding">
                        <div class="container">
                            <div class="row">
                                <div class="form_container contact-form">
                                    <form action="#">
                                        <label for="form-field-name" class="elementor-field-label">
                                            Họ tên
                                        </label>
                                        <input type="text" placeholder="Enter full name" required="required" aria-required="true" />

                                        <label for="form-field-name" class="elementor-field-label">
                                            Năm sinh
                                        </label>
                                        <input type="date" placeholder="Enter birthday" required="required" aria-required="true" />

                                        <label for="form-field-name" class="elementor-field-label">
                                            Giới tính
                                        </label>
                                        <input type="text" placeholder="Enter sex" required="required" aria-required="true" />
                                        <!-- <div class="elementor-field elementor-select-wrapper remove-before ">
                                                        <select name="form_fields[message]" id="form-field-message"
                                                            class="elementor-field-textual elementor-size-md" required="required"
                                                            aria-required="true">
                                                            <option value="Nam">Nam</option>
                                                            <option value="Nữ" selected="selected">Nữ</option>
                                                        </select>
                                                    </div> -->
                                        <label for="form-field-name" class="elementor-field-label">
                                            Số điện thoại
                                        </label>
                                        <input type="text" placeholder="Enter phone number" required="required" aria-required="true" />
                                        <label for="form-field-name" class="elementor-field-label">
                                            Mã số bệnh nhân (nếu có)
                                        </label>
                                        <input type="text" placeholder="Enter mscn" />
                                        <label for="form-field-name" class="elementor-field-label">
                                            Mã số BHYT (nếu có)
                                        </label>
                                        <input type="text" placeholder="Enter BHYT" />
                                        <label for="form-field-name" class="elementor-field-label">
                                            Triệu chứng/Nhu cầu khám (Không bắt buộc)
                                        </label>
                                        <textarea placeholder="Enter trieu chung" rows="5"></textarea>

                                    </form>
                                    <div class="submitButton">
                                        <button class="submit">Đăng kí</button>
                                    </div>
                                    <div id="myModal" class="modal">
                                        <h4>Thông tin của bạn đã được gửi tới bác sĩ.</h4>
                                        <h4>Xin cảm ơn</h4>
                                        <div class="BtnClose">
                                            <button id="closeButton">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- end contact section -->
